# /etc/inputrc - global inputrc for libreadline
# See readline(3readline) and 'info rluserman' for more information.

set bell-style none
set completion-ignore-case off
set convert-meta off
#set editing-mode vi
set input-meta on
set mark-directories on
set mark-symlinked-directories on
set match-hidden-files off
set output-meta on
set show-all-if-unmodified on
set visible-stats on

# ctrl-up-arrow and ctrl-down-arrow for beginning/end of line
# ctrl-left-arrow and ctrl-right-arrow for word moving
#"\e[1;5A": beginning-of-line
#"\e[1;5B": end-of-line
#"\e[1;5C": forward-word
#"\e[1;5D": backward-word

# ctrl-shift-up-arrow and ctrl-shift-down-arrow for beginning/end of line
# ctrl-shift-left-arrow and ctrl-shift-right-arrow for word moving
#"\e[1;6A": beginning-of-line
#"\e[1;6B": end-of-line
#"\e[1;6C": forward-word
#"\e[1;6D": backward-word

# shift-tab to cycle through the completion list
"\e[Z": menu-complete
