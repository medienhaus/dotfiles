# reset color/mode
nocolor="$(tput sgr0)"

# foreground normal
black="$(tput sgr0; tput setaf 0)"
red="$(tput sgr0; tput setaf 1)"
green="$(tput sgr0; tput setaf 2)"
yellow="$(tput sgr0; tput setaf 3)"
blue="$(tput sgr0; tput setaf 4)"
magenta="$(tput sgr0; tput setaf 5)"
cyan="$(tput sgr0; tput setaf 6)"
white="$(tput sgr0; tput setaf 7)"

# foreground bold
BLACK="$(tput sgr0; tput bold; tput setaf 0)"
RED="$(tput sgr0; tput bold; tput setaf 1)"
GREEN="$(tput sgr0; tput bold; tput setaf 2)"
YELLOW="$(tput sgr0; tput bold; tput setaf 3)"
BLUE="$(tput sgr0; tput bold; tput setaf 4)"
MAGENTA="$(tput sgr0; tput bold; tput setaf 5)"
CYAN="$(tput sgr0; tput bold; tput setaf 6)"
WHITE="$(tput sgr0; tput bold; tput setaf 7)"

